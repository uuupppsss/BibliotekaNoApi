<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteka.mvvm.view.LoginPage"
             Title="LoginPage">
    <StackLayout Padding="20">
        <Entry Placeholder="Имя пользователя" Text="{Binding Username}"/>
        <Entry Placeholder="Пароль" IsPassword="True" Text="{Binding Password}"/>
        <Button Text="Войти" Command="{Binding LoginCommand}"/>
        <Button Text="Регистрация" Command="{Binding RegisterCommand}"/>
    </StackLayout>
</ContentPage>